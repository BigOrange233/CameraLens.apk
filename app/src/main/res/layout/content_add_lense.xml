<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Makeview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Make" />

        <EditText
            android:id="@+id/newMake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ex: Canon"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/Focalview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Focal Length [mm]" />

        <EditText
            android:id="@+id/newFocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ex: 200 for 200mm"
            android:inputType="numberSigned" />

        <TextView
            android:id="@+id/ApertureView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Aperture" />

        <EditText
            android:id="@+id/newAperture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ex: 2.8 for F2.8"
            android:inputType="numberDecimal|numberSigned" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>